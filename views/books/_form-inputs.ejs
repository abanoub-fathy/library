<div>
  <label for="title">Title</label>
  <input type="text" name="title" id="title" value="<%= book.title %>" />
</div>

<div>
  <label for="autors">Select Author</label>
  <select name="author" id="author">
    <% authors.map((author) => { %> <% if(author.id == book.author) { %>
    <option
      value="<%= author.id %>"
      label="<%= author.name %>"
      selected
    ></option>
    <%} else {%>
    <option value="<%= author.id %>" label="<%= author.name %>"></option>
    <% } %> <% }) %>
  </select>
</div>

<div>
  <label for="publishDate">Publish date</label>
  <input type="date" name="publishDate" value="<%= !book.publishDate ? "" :
  book.publishDate.toISOString().split('T')[0] %>" />
</div>

<div>
  <label for="pages">Number of pages</label>
  <input type="number" name="pages" min="1" value="<%= book.pages %>" />
</div>

<div>
  <label for="cover">Cover</label>
  <input type="file" name="cover" />
</div>

<div>
  <label for="description"></label>
  <textarea name="description" id="" cols="30" rows="10">
<%= book.description %></textarea
  >
</div>
