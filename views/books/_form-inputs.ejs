<div class="form-row">
  <div class="form-field">
    <label for="title">Title</label>
    <input
      type="text"
      name="title"
      id="title"
      value="<%= book.title %>"
      required
    />
  </div>
  <div class="form-field">
    <label for="autors">Select Author</label>
    <select name="author" id="author" required>
      <% authors.map((author) => { %> <% if(author.id == book.author) { %>
      <option
        value="<%= author.id %>"
        label="<%= author.name %>"
        selected
      ></option>
      <%} else {%>
      <option value="<%= author.id %>" label="<%= author.name %>"></option>
      <% } %> <% }) %>
    </select>
  </div>
</div>

<div class="form-row">
  <div class="form-field">
    <label for="publishDate">Publish date</label>
    <input type="date" name="publishDate" required value="<%= !book.publishDate
    ? "" : book.publishDate.toISOString().split('T')[0] %>" />
  </div>
  <div class="form-field">
    <label for="pages">Number of pages</label>
    <input type="number" name="pages" min="1" value="<%= book.pages %>" />
  </div>
</div>

<div class="form-row special-row">
  <div class="form-field">
    <label for="cover">Cover</label>
    <input
      type="file"
      name="cover"
      class="filepond"
      value="<%= book.imgPath %> "
    />
  </div>
  <div class="form-field">
    <label for="description">Description</label>
    <textarea name="description" id="" cols="30" rows="10" required>
  <%= book.description %></textarea
    >
  </div>
</div>
