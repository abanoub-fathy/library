<% activeNow="books" %>

<h1>All Books Page</h1>
<p>Search for specific book</p>
<!-- Book search Form -->
<form action="/books" method="get" class="special-form">
  <div class="form-row">
    <div class="form-field form-field-full-width">
      <label for="title">title</label>
      <input
        type="search"
        id="title"
        name="title"
        value="<%= searchQuery.title %>"
      />
    </div>
  </div>

  <div class="form-row">
    <div class="form-field">
      <label for="puplishBefore">Publish Before</label>
      <input
        type="date"
        id="puplishBefore"
        name="puplishBefore"
        value="<%= searchQuery.puplishBefore %>"
      />
    </div>
    <div class="form-field">
      <label for="puplishAfter">Publish After</label>
      <input
        type="date"
        id="puplishAfter"
        name="puplishAfter"
        value="<%=searchQuery.puplishAfter %>"
      />
    </div>
  </div>

  <button type="submit" class="btn btn-primary">Search</button>
</form>

<!-- Display the books details -->
<%- include('../partials/books-grid.ejs') %>
