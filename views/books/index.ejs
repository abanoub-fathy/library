<h1>All Books Page</h1>
<hr />
<!-- Book search Form -->
<form action="/books" method="get" class="special-form">
  <div class="form-row">
    <div class="form-field form-field-full-width">
      <label for="title">title</label>
      <input
        type="search"
        id="title"
        name="title"
        value="<%= searchQuery.title %>"
      />
    </div>
  </div>

  <div class="form-row">
    <div class="form-field">
      <label for="puplishBefore">Publish Before</label>
      <input
        type="date"
        id="puplishBefore"
        name="puplishBefore"
        value="<%= searchQuery.puplishBefore %>"
      />
    </div>
    <div class="form-field">
      <label for="puplishAfter">Publish After</label>
      <input
        type="date"
        id="puplishAfter"
        name="puplishAfter"
        value="<%=searchQuery.puplishAfter %>"
      />
    </div>
  </div>

  <button type="submit" class="btn btn-primary">Search</button>
</form>

<!-- Display the books details -->
<hr />

<div class="books-grid">
  <% books.map((book) => { %>
  <div class="book">
    <!-- Show Books Link -->
    <a href="/books/<%= book.id %>">
      <div class="card">
        <img src="<%= book.imgPath %>" width="100" height="150" />
        <span class="title"><%= book.title %></span>
      </div>
    </a>
  </div>

  <% }) %>
</div>
